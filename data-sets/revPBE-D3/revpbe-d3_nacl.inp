 &GLOBAL
   PREFERRED_FFT_LIBRARY  FFTW3
   FFTW_PLAN_TYPE  MEASURE
   EXTENDED_FFT_LENGTHS T
   PRINT_LEVEL  LOW
   PROJECT_NAME NaCl-H2O
   RUN_TYPE MD
 &END GLOBAL

 &FORCE_EVAL
   &DFT
     CHARGE 0 
     BASIS_SET_FILE_NAME GTH_BASIS_SETS
     BASIS_SET_FILE_NAME BASIS_MOLOPT
     BASIS_SET_FILE_NAME BASIS_MOLOPT_UCL
     POTENTIAL_FILE_NAME POTENTIAL
     &SCF
       MAX_SCF  20
       EPS_SCF     4.9999999999999998E-07
       SCF_GUESS  RESTART
       &OT  T
         MINIMIZER  DIIS
         PRECONDITIONER  FULL_ALL
       &END OT
       &OUTER_SCF  T
         EPS_SCF     4.9999999999999998E-07
         MAX_SCF  20
       &END OUTER_SCF
       &PRINT
         &RESTART  SILENT
           ADD_LAST  NUMERIC
           &EACH
             QS_SCF  0
           &END EACH
         &END RESTART
       &END PRINT
     &END SCF
     &QS
       EXTRAPOLATION USE_GUESS
       EPS_DEFAULT     9.9999999999999998E-13
       EPS_PGF_ORB     1.0000000000000000E-14
     &END QS
     &MGRID
       NGRIDS  5
       CUTOFF     1200
     &END MGRID
     &XC
       DENSITY_CUTOFF     1.0000000000000000E-10
       GRADIENT_CUTOFF     1.0000000000000000E-10
       TAU_CUTOFF     1.0000000000000000E-10
       &XC_GRID
         XC_DERIV  SPLINE2_SMOOTH
       &END XC_GRID
       &XC_FUNCTIONAL  NO_SHORTCUT
         &PBE  T
           PARAMETRIZATION  REVPBE
         &END PBE
       &END XC_FUNCTIONAL
       &VDW_POTENTIAL
         POTENTIAL_TYPE  PAIR_POTENTIAL
         &PAIR_POTENTIAL
           R_CUTOFF     1.5000000000000005E+01
           TYPE  DFTD3
           PARAMETER_FILE_NAME dftd3.dat
           REFERENCE_FUNCTIONAL revPBE
           LONG_RANGE_CORRECTION  T
         &END PAIR_POTENTIAL
       &END VDW_POTENTIAL
     &END XC
   &END DFT
   &SUBSYS
     &CELL
       PERIODIC  XYZ
       MULTIPLE_UNIT_CELL  1 1 1
     &END CELL
     &KIND H
       BASIS_SET TZV2P-GTH-q1
       MASS     2.0000000000000000E+00
       POTENTIAL GTH-PBE-q1
     &END KIND
     &KIND O
       BASIS_SET TZV2P-GTH-q6
       POTENTIAL GTH-PBE-q6
     &END KIND
     &KIND Cl
       BASIS_SET TZV2P-GTH-q7
       POTENTIAL GTH-PBE-q7
     &END KIND
     &KIND Na
       BASIS_SET TZV2P-GTH-q9
       POTENTIAL GTH-PBE-q9
     &END KIND
     &TOPOLOGY
       COORD_FILE_NAME init.xyz
       COORD_FILE_FORMAT  XYZ
       MULTIPLE_UNIT_CELL  1 1 1
     &END TOPOLOGY
   &END SUBSYS
 &END FORCE_EVAL
